<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contacto | ULTRA TECH</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <style>
        /* Paleta de Colores ULTRA TECH */
        :root {
            --color-primary: #E9ECEF; 
            --color-secondary: #D0AE50; 
            --color-new-background: #212529; 
            --color-card-background: #2B3035; 
            --color-white: #FFFFFF; 
            --color-whatsapp: #25d366; 
            --color-whatsapp-hover: #128c7e; 

            /* Variables de Sidebar */
            --sidebar-width-expanded: 240px;
            --sidebar-width-collapsed: 70px;
            --sidebar-bg: var(--color-card-background);
            --sidebar-text: var(--color-primary);
            --sidebar-highlight: var(--color-secondary);
        }

        /* Estilos Generales */
        body { 
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; 
            margin: 0; 
            background-color: var(--color-new-background); 
            color: var(--color-primary);
            display: flex;
            overflow-x: hidden; 
        }

        /* Contenedor Principal (Todo el contenido excluyendo el sidebar) */
        #main-container {
            flex-grow: 1; 
            margin-left: var(--sidebar-width-collapsed); 
            padding: 30px 20px 80px 20px;
            transition: margin-left 0.3s ease;
            min-height: 100vh;
            box-sizing: border-box;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start; /* Alineación vertical al inicio */
        }

        #main-container.expanded {
            margin-left: var(--sidebar-width-expanded);
        }

        /* --- Estilos de SIDEBAR --- */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            width: var(--sidebar-width-collapsed);
            background-color: var(--sidebar-bg); 
            box-shadow: 2px 0 10px rgba(0,0,0,0.5);
            transition: width 0.3s ease;
            z-index: 1050; 
            display: flex;
            flex-direction: column;
            overflow-y: auto; 
        }

        .sidebar.expanded {
            width: var(--sidebar-width-expanded);
        }
        
        .sidebar-header {
            display: flex;
            align-items: center;
            justify-content: flex-start; 
            padding: 10px 10px;
            height: 50px; 
            min-height: 50px;
            position: relative; 
        }

        .sidebar-logo {
            color: var(--sidebar-highlight);
            font-size: 20px;
            font-weight: bold;
            opacity: 0;
            transition: opacity 0.2s ease;
            white-space: nowrap;
            overflow: hidden;
            margin-left: 50px; 
            max-width: 150px;
            display: block; 
        }

        .sidebar:not(.expanded) .sidebar-logo {
            opacity: 0;
            width: 0;
            display: none;
        }

        .sidebar.expanded .sidebar-logo {
            opacity: 1;
            width: auto;
        }
        
        .toggle-btn {
            background: none;
            border: none;
            color: var(--sidebar-text);
            font-size: 20px;
            cursor: pointer;
            padding: 5px;
            border-radius: 4px;
            transition: color 0.2s, transform 0.2s;
            position: absolute; 
            left: 10px;
        }
        
        .toggle-btn:hover {
            color: var(--sidebar-highlight);
        }

        .sidebar-menu {
            list-style: none;
            padding: 10px 0;
            margin: 0;
            flex-grow: 1;
        }

        .menu-item {
            padding: 0;
            cursor: pointer;
        }

        .menu-item a {
            position: relative; 
            display: flex;
            align-items: center;
            text-decoration: none;
            color: var(--sidebar-text);
            padding: 10px 15px;
            transition: background-color 0.2s, color 0.2s;
            overflow: hidden; 
            min-height: 50px; 
        }
        
        .menu-item a:hover {
            background-color: #3B4249; 
            color: var(--sidebar-highlight);
        }
        
        .menu-item i {
            position: absolute; 
            left: 20px; 
            top: 50%;
            transform: translateY(-50%);
            width: 30px; 
            text-align: center;
            font-size: 24px; 
            color: var(--sidebar-highlight);
        }

        .menu-item span {
            margin-left: 60px; 
            opacity: 0;
            transition: opacity 0.3s ease 0.1s; 
            white-space: nowrap;
            display: block; 
        }
        
        .sidebar:not(.expanded) .menu-item span {
            opacity: 0;
            display: block; 
        }
        
        .sidebar.expanded .menu-item span {
            opacity: 1;
        }
        
        .menu-item.active a {
            background-color: var(--sidebar-highlight);
            color: var(--color-new-background);
            font-weight: bold;
        }
        .menu-item.active i {
            color: var(--color-new-background);
        }
        
        /* Ajustes Responsive (Móvil) */
        @media (max-width: 768px) {
            .menu-item i {
                font-size: 18px; 
            }
            .menu-item a {
                min-height: 45px; 
            }

            #main-container {
                margin-left: 0; 
                padding: 70px 15px 80px 15px; 
            }
            
            .sidebar {
                width: 0;
                box-shadow: none; 
                overflow: hidden; 
                transition: width 0.3s ease, box-shadow 0.3s ease;
            }
            
            .sidebar.expanded {
                width: var(--sidebar-width-expanded); 
                box-shadow: 2px 0 10px rgba(0,0,0,0.5);
            }
            
            .toggle-btn {
                position: fixed;
                top: 10px;
                left: 10px;
                z-index: 1060; 
                padding: 10px;
                background-color: var(--sidebar-bg);
                border-radius: 8px;
            }

            .sidebar-header {
                 justify-content: flex-start;
                 width: var(--sidebar-width-expanded); 
            }
            
            .sidebar-logo {
                opacity: 1; 
                width: auto;
                display: block;
            }
            
            .sidebar .menu-item span {
                opacity: 1; 
                display: block;
            }

            .sidebar:not(.expanded) .sidebar-logo {
                display: none;
            }
        }
        
        /* --- ESTILOS DE PANTALLA EN CONSTRUCCIÓN --- */
        .main-title {
            text-align: center;
            margin-bottom: 30px;
            padding: 0 0px;
            width: 100%;
        }
        .main-title h1 {
            color: var(--color-primary); 
            font-size: 36px;
            margin: 0;
            padding: 0;
            border-bottom: none;
        }
        .main-title .underline {
            display: block;
            width: 150px; 
            height: 3px;
            background-color: var(--color-secondary);
            margin: 5px auto 0 auto;
            border-radius: 2px;
        }

        .construction-message {
            flex-grow: 1; /* Permite que el contenedor crezca y empuje el contenido hacia el centro */
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            min-height: calc(100vh - 100px); /* Ajusta para que ocupe casi toda la altura */
            max-width: 600px;
            padding: 40px;
            background-color: var(--color-card-background);
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
            margin-top: 50px; /* Separación de la cabecera */
        }

        .construction-message h2 {
            font-size: 32px;
            color: var(--color-secondary);
            margin-bottom: 20px;
        }
        .construction-message i {
            font-size: 60px;
            color: var(--color-highlight);
            margin-bottom: 30px;
        }
    </style>
</head>
<body>

    <!-- SIDEBAR -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <button class="toggle-btn" id="toggle-btn">
                <i class="fa-solid fa-bars"></i>
            </button>
            <span class="sidebar-logo">ULTRA TECH</span>
        </div>
        <ul class="sidebar-menu" id="sidebar-menu">
            <!-- Items loaded via JavaScript -->
        </ul>
    </div>
    
    <!-- MAIN CONTENT CONTAINER -->
    <div id="main-container">

        <div class="main-title">
            <h1>CONTACTO</h1>
            <span class="underline"></span>
        </div>

        <div class="construction-message">
            <i class="fa-solid fa-screwdriver-wrench"></i>
            <h2>Pantalla en construcción</h2>
            <p>Estamos trabajando arduamente para brindarte la mejor información. ¡Vuelve pronto!</p>
        </div>

    </div> <!-- End Main Content Container -->

    <script>
        document.addEventListener('DOMContentLoaded', initApp);

        let sidebarItems = []; 

        // Función para verificar si estamos en móvil
        function isMobile() {
            return window.innerWidth <= 768;
        }
        
        // --- Funciones de Sidebar ---
        const sidebar = document.getElementById('sidebar');
        const mainContainer = document.getElementById('main-container');

        function toggleSidebar() {
            const isExpanded = sidebar.classList.toggle('expanded');
            if (!isMobile()) {
                mainContainer.classList.toggle('expanded', isExpanded);
            }
        }

        function updateSidebarActiveClass() {
            const path = window.location.pathname.split('/').pop();
            const currentUrl = path || "contacto.html"; // Ajustar para esta página
            
            document.querySelectorAll('#sidebar-menu .menu-item').forEach(item => {
                const link = item.querySelector('a');
                if (link && link.href) {
                    const targetUrl = link.href.split('/').pop();
                    
                    if (targetUrl === currentUrl) {
                        item.classList.add('active');
                    } else {
                        item.classList.remove('active');
                    }
                }
            });
        }
        
        async function initSidebar() {
            const toggleBtn = document.getElementById('toggle-btn');
            toggleBtn.addEventListener('click', toggleSidebar);

            try {
                const response = await fetch('config/sidebar_config.json');
                if (!response.ok) throw new Error(`Error ${response.status}: No se pudo cargar config/sidebar_config.json.`);
                sidebarItems = await response.json();
                buildSidebarMenu(sidebarItems);
                updateSidebarActiveClass(); 

                if (!isMobile()) {
                    sidebar.classList.remove('expanded');
                    mainContainer.classList.remove('expanded');
                } else {
                    sidebar.classList.remove('expanded'); 
                    mainContainer.classList.remove('expanded');
                }

                window.addEventListener('resize', () => {
                    if (!isMobile() && sidebar.classList.contains('expanded')) {
                        mainContainer.classList.add('expanded');
                    } else if (!isMobile() && !sidebar.classList.contains('expanded')) {
                        mainContainer.classList.remove('expanded');
                    } else if (isMobile() && sidebar.classList.contains('expanded')) {
                        mainContainer.classList.remove('expanded');
                    }
                });

            } catch (error) {
                console.error("Error al inicializar el sidebar:", error);
                document.getElementById('sidebar-menu').innerHTML = `<li style="color: red; padding: 10px 20px;">Error al cargar menú.</li>`;
            }
        }

        function buildSidebarMenu(items) {
            const menu = document.getElementById('sidebar-menu');
            menu.innerHTML = ''; 

            items.forEach(item => {
                const li = document.createElement('li');
                li.classList.add('menu-item');

                const a = document.createElement('a');
                a.href = item.url;
                
                if (item.url.includes('.html')) {
                    a.onclick = (e) => {
                        if (isMobile()) {
                            toggleSidebar();
                        }
                    };
                }

                a.innerHTML = `
                    <i class="fa-solid ${item.icon}"></i>
                    <span>${item.label}</span>
                `;
                li.appendChild(a);
                menu.appendChild(li);
            });
        }
        // --- Fin Funciones de Sidebar ---

        function initApp() {
            initSidebar(); 
        }
    </script>
</body>
</html>